{
  "name": "shareapp",
  "version": "1.0.0",
  "description": "Cross-platform local file sharing app built with React, Node.js, and Electron",
  "author": "Debojyoti Koley",
  "main": "main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run electron:start\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && node index.js",
    "electron:start": "electron .",
    "build:frontend": "cd frontend && npm run build",
    "build:app": "npm run build:frontend && electron-builder",
    "package": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.deboj.shareapp",
    "productName": "ShareApp",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "frontend/build/**/*",
      "backend/**/*",
      "backend-node/**/*",
      "main.js",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}"
    ],
    "extraResources": [
      {
        "from": "backend/",
        "to": "backend/",
        "filter": [
          "**/*",
          "!node_modules/**"
        ]
      },
      {
        "from": "backend/node_modules/",
        "to": "backend/node_modules/"
      },
      {
        "from": "backend-node/node.exe",
        "to": "backend-node/node.exe"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/"
    }
  },
  "dependencies": {
    "axios": "^1.7.2",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12"
  }
}